[Interface]
Address = { $wireguard{Address} }
ListenPort = { $wireguard{TCPPort} }
PostUp = iptables -A FORWARD -i wg0 -j ACCEPT; iptables -t nat -A POSTROUTING -o { $wireguard{Interface} } -j MASQUERADE
PostDown = iptables -D FORWARD -i wg0 -j ACCEPT; iptables -t nat -D POSTROUTING -o { $wireguard{Interface} } -j MASQUERADE
PrivateKey = { `cat /etc/wireguard/private.key` }
SaveConfig = true

[Peer]
PublicKey = { `cat /etc/wireguard/public.key` }
AllowedIPs = { $wireguard{AllowedIPs} }
